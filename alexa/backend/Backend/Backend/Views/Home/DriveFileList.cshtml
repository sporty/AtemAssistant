@using System.Security.Claims;

@model IReadOnlyList<string>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Google.Apis.Auth.AspNetCore3 sample - Google Drive file list</title>
</head>
<body>
    <h2>Google.Apis.Auth.AspNetCore3 sample - Google Drive file list</h2>
    <p>You are logged in as @User.FindFirst(ClaimTypes.GivenName)?.Value.</p>
    @if (@Model.Count > 0)
    {
        <p>These are some of your Google Drive files.</p>
        <ul>
            @foreach (var fileName in @Model)
            {
                <li>@fileName</li>
            }
        </ul>
    }
    else
    {
        <p>It seems you don't have files stored in Google Drive.</p>
    }
    <p><a asp-controller="home" asp-action="index">Index</a></p>
</body>
</html>
